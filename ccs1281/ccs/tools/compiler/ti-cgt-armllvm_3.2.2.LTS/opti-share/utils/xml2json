const fs          = require('fs');
const commander   = require('commander');
const xml_file    = require('../lib/elf_xml');

//------------------------------------------------------------------------------
// Main
//------------------------------------------------------------------------------
commander.program
   .description('xml2json = Comvert tiarmclang linker .xml files to json')
   .argument   ('<elf>',               'The input ELF xml file')
   .option     ('-o, --output <file>', 'The output json file')
   .action     ((elf, opts) => process(elf, opts))
   .parse      ();

//------------------------------------------------------------------------------
// Process
//------------------------------------------------------------------------------
function process(elf, opts)
{
    let content = JSON.stringify(xml_file(elf, 0, {}));

    if (opts.output) fs.writeFileSync(opts.output, content);
    else console.log(content);
}