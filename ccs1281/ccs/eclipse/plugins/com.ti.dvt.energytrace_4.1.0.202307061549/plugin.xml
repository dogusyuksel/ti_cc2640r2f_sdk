      <page
            category="com.ti.dvt.datamodel.ui.preferences.page"
            class="com.ti.dvt.energytrace.PreferencePage"
            id="com.ti.dvt.energytrace.preferences.page"
            name="EnergyTrace&#x2122; Technology">
         <keywordReference id="com.ti.dvt.energytrace.preferences.page.keyword"/>
      </page>
   </extension>
