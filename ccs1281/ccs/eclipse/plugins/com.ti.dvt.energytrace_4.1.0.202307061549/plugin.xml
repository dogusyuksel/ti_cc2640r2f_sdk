<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="EnergyTrace"
            id="com.ti.dvt.energytrace">
      </category>
      <view
            name="EnergyTrace&#x2122; Technology"
            icon="icons/ETLogo.png"
            category="com.ti.dvt.energytrace"
            class="com.ti.dvt.energytrace.views.Dashboard"
            restorable="true"
            id="com.ti.dvt.energytrace.views.Dashboard">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml" plugin="com.ti.dvt.energytrace">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml" plugin="com.ti.dvt.ui">
      </contexts>
   </extension>
   <extension point="org.eclipse.help.toc">
      <toc file="toc.xml" primary="true" />
   </extension>
<!-- Tool menu item -->   
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.ti.dvt.energytrace.actionSet"
            label="EnergyTrace Views"
            visible="false">
         <menu
               id="com.ti.dvt.tools.menu"
               label="&amp;Tools">
            <separator
                  name="energytraceTools">
            </separator>
            <groupMarker
                  name="powerprofiler">
            </groupMarker>
         </menu>
         <action
               class="com.ti.dvt.energytrace.actions.DashboardAction"
               icon="icons/ETLogo.png"
               id="energytrace"
               label="EnergyTrace&#x2122;"
               menubarPath="com.ti.dvt.tools.menu/com.ti.dvt.energytrace"
               style="push"
               toolbarPath="energytrace"
               tooltip="EnergyTrace&#x2122; Technology">
         </action>
      </actionSet>
   </extension>
