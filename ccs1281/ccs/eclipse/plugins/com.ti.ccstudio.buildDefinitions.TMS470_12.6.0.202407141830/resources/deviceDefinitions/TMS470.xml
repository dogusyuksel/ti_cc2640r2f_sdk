<?xml version="1.0" encoding="UTF-8"?>

<deviceDefinitions>

	<isaFamily 
		id="TMS470" 
		name="Arm" 
		buildToolNamePattern="TI { %470; arm%:5.0 }, TICLANG { tiarm% }"
		supportedEndiannessTypes="big, little"
		supportedOutputFormats="coff:ti_arm9_abi, elf:eabi"/>
	
	<isa 
		id="ARM7" 
		name="Arm7" 
		family="TMS470"/>
	<isa 
		id="ARM9" 
		name="Arm9" 
		family="TMS470"/>
	<isa 
		id="ARM11" 
		name="Arm11" 
		family="TMS470"/>
	<isa 
		id="Cortex A" 
		name="Cortex A" 
		family="TMS470"
		supportedEndiannessTypes="little, big"/>
	<isa 
		id="Cortex M" 
		name="Cortex M" 
		family="TMS470"
		partnumFilter="^(?!MSP432).*"
		supportedEndiannessTypes="be32, be8, big, little"/>
	<isa 
		id="Cortex R" 
		name="Cortex R" 
		family="TMS470"
		supportedEndiannessTypes="be32, be8, big, little"/>
		 

	<!-- Generic devices -->
	
	<customDevice
		id="com.ti.ccstudio.deviceModel.TMS470.CustomTMS470Device"
		name="Custom Arm Device"
		family="TMS470">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</customDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexA8Device"
		name="Generic CortexA8 Device"
		deviceVariant="CortexA8"
		isa="Cortex A">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.4.0"
			whenToolChain="TI"/>
		<property name="RTSlib" value="rtsv7A8_A_le_n_eabi.lib" 
			whenEndianness="little" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="CompilerBuildOptions" value="-mv7A8 --code_state=32"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexA9Device"
		name="Generic CortexA9 Device"
		deviceVariant="CortexA9"
		isa="Cortex A">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.4.0"
			whenToolChain="TI"/>
		<property name="CompilerBuildOptions" value="-mv7A8 --code_state=32"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexA15Device"
		name="Generic CortexA15 Device"
		deviceVariant="CortexA15"
		isa="Cortex A">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.4.0"
			whenToolChain="TI"/>
		<property name="CompilerBuildOptions" value="-mv7A8 --code_state=32"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexM3Device"
		name="Generic CortexM3 Device"
		deviceVariant="CortexM3"
		isa="Cortex M">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.4.0"
			whenToolChain="TI"/>
		<property name="RTSlib" value="rtsv7M3_T_be_tiarm9.lib" 
			whenEndianness="be32" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="RTSlib" value="rtsv7M3_T_le_tiarm9.lib" 
			whenEndianness="little" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="CompilerBuildOptions" value="-mv7M3"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexM4Device"
		name="Generic CortexM4 Device"
		deviceVariant="CortexM4"
		isa="Cortex M">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.9.0"
			whenToolChain="TI"/>
		<property name="CompilerBuildOptions" value="-mv7M4"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexR4Device"
		name="Generic CortexR4 Device"
		deviceVariant="CortexR4"
		isa="Cortex R">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="4.4.0"
			whenToolChain="TI"/>
		<property name="RTSlib" value="rtsv7R4_T_be_tiarm9.lib" 
			whenEndianness="be32" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="RTSlib" value="rtsv7R4_T_be_tiarm9.lib" 
			whenEndianness="be8" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="RTSlib" value="rtsv7R4_T_be_tiarm9.lib" 
			whenEndianness="big" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="RTSlib" value="rts32earm9.lib" 
			whenEndianness="little" 
			whenToolChain="TI" 
			whenOutputFormat="COFF"/>
		<property name="CompilerBuildOptions" value="-mv7R4 --code_state=32"
			whenToolChain="TI"/>
	</genericDevice>

	<genericDevice
		id="com.ti.ccstudio.deviceModel.TMS470.GenericCortexR5Device"
		name="Generic CortexR5 Device"
		deviceVariant="CortexR5"
		isa="Cortex R">
		<property name="IsElfDefault" value="true"/>
		<property name="MinCodegenVersion" value="5.1.6"
			whenToolChain="TI"/>
		<property name="CompilerBuildOptions" value="-mv7R5 --code_state=32"
			whenToolChain="TI"/>
	</genericDevice>


	<!-- Real devices -->
	
	<realDeviceFactory
		deviceVariant="ARM7"
		isa="ARM7">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</realDeviceFactory>
		
	<realDeviceFactory
		deviceVariant="ARM9"
		isa="ARM9">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</realDeviceFactory>
		
	<realDeviceFactory
		deviceVariant="ARM11"
		isa="ARM11">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</realDeviceFactory>
		
	<realDeviceFactory
		deviceVariant="CortexA8"
		isa="Cortex A">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</realDeviceFactory>
		
	<realDeviceFactory
		deviceVariant="CortexM3"
		isa="Cortex M">
	</realDeviceFactory>
		
	<realDeviceFactory
		deviceVariant="CortexR4"
		isa="Cortex R">
		<property name="CompilerBuildOptions" value="--code_state=32"
			whenToolChain="TI"/>
	</realDeviceFactory>
		

	<!-- Legacy devices -->
	
	<legacyDevice
		id="TMS470R1X"
		deviceVariant="ARM7"
		isa="ARM7"/>
		
	<legacyDevice
		id="TMS470R2X"
		deviceVariant="ARM9"
		isa="ARM9"/>
		
	<legacyDevice
		id="TMS470R3X"
		deviceVariant="ARM11"
		isa="ARM11"/>

	<!-- NOTE [bbelyavsky]: MSPware with MSP432 was released early, and was based on CCS build that didn't yet support MSP432 fully.
	     This is a workaround to handle existing projects which were based on that early version of MSPware. -->
	<legacyDevice
		id="Cortex M.MSP432P401R"
		deviceVariant="CortexM4"
		isa="Cortex M"/>

		
</deviceDefinitions>